    "/api/mapel-materi": {
      "get": {
        "summary": "Get Mapel Materi",
        "tags": ["Materi Digital"],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id_mapel": { "type": "string" },
                      "mapel": { "type": "string" }
                    }
                  }
