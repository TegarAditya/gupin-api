                    "type": "object",
                    "properties": {
                      "KURIKULUM": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/jenjang-banksoal": {
      "get": {
        "summary": "Get Jenjang Bank Soal",
        "description": "Get Jenjang for Bank Soal",
        "tags": ["Bank Soal"],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "JENJANG": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/kelas-banksoal": {
      "get": {
        "summary": "Get Kelas Bank Soal",
        "description": "Get Kelas for Bank Soal",
        "tags": ["Bank Soal"],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "KELAS": { "type": "integer" }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/mapel-banksoal": {
      "get": {
        "summary": "Get Mapel Bank Soal",
        "description": "Get Mapel for Bank Soal",
        "tags": ["Bank Soal"],
        "parameters": [
          {
            "name": "jenjang",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["SD", "SMP", "SMA", "SMK", "MI", "MTS", "MA"]
              }
            },
            "description": "Jenjang (grade levels)",
            "required": false
          },
          {
            "name": "kurikulum",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["KURTILAS", "KURMER", "KMA"]
            },
            "description": "Kurikulum",
            "required": false
          },
          {
            "name": "jenis_soal",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["PTS", "PAS"]
            },
            "description": "Type of soal (PTS or PAS)",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "MAPEL": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Data not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },

    "/api/materi": {
      "get": {
        "summary": "Get Materi",
        "tags": ["Materi Digital"],
        "parameters": [
