            "description": "Kelas ID",
            "required": false
          },
          {
            "name": "id_mapel",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Mapel ID",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "jurusan": { "type": "string" },
                      "kelas": { "type": "string" },
                      "mapel": { "type": "string" },
                      "judul_materi": { "type": "string" },
                      "materi": { "type": "string" },
                      "link_youtube": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/jenjang-materi": {
